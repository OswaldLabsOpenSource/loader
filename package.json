{
  "name": "agastya-loader",
  "version": "1.0.0",
  "author": "Anand Chowdhary <mail@anandchowdhary.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "build-loader": "rollup loader.ts --format iife --file dist/loader.js",
    "start": "concurrently 'yarn watch' 'yarn server' 'yarn prettier-watch' 'yarn watch-loader'",
    "watch": "onchange '*.ts' -- yarn build",
    "watch-loader": "onchange '*.ts' -- yarn build-loader",
    "server": "yarn build && yarn build-loader && nodemon dist/index.js",
    "prettier-watch": "onchange '*.ts' -- prettier --write {{changed}}"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.10",
    "onchange": "^5.2.0",
    "prettier": "^1.16.4",
    "rollup": "^1.7.3",
    "typescript": "^3.3.4000"
  }
}
