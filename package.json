{
  "name": "agastya-loader",
  "version": "1.0.0",
  "author": "Anand Chowdhary <mail@anandchowdhary.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "start": "concurrently 'yarn watch' 'yarn prettier-watch'",
    "watch": "yarn build && nodemon dist/index.js",
    "prettier-watch": "onchange 'index.ts' -- prettier --write {{changed}}"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.10",
    "onchange": "^5.2.0",
    "prettier": "^1.16.4",
    "typescript": "^3.3.4000"
  }
}
